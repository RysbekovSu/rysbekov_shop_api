<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".payment.PaymentFragment">
    <ImageButton
        android:layout_width="87dp"
        android:layout_height="99dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/bas"
        android:contentDescription="button_back"
        tools:ignore="YouchTargetSizeCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Payment ways:"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26dp"
       />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_visa"
        android:layout_width="148dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="19dp"
        app:cardCornerRadius="26dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/visa"/>
    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:id="@+id/card_mbank"
        android:layout_width="148dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="19dp"
        app:cardCornerRadius="26dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/mbank"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>